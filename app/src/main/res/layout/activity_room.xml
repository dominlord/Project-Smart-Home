<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF0E6"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/linearLayout01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/relative_background_profile"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Textview1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/class_room"
                    android:textSize="19sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <ViewFlipper
                android:id="@+id/viewFlipper4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:inAnimation="@anim/relative_slide_in_left"
                android:outAnimation="@anim/relative_slide_out_right">

                <RelativeLayout
                    android:id="@+id/relativeLayoutButton3"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_button_shape"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:elevation="6dp"
                        android:text="@string/temp_room"
                        android:textColor="@color/little_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="213dp"
                        android:layout_height="141dp"
                        android:layout_marginLeft="150dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/room3" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </ViewFlipper>

            <!-- ViewFlipper 1 -->
            <ViewFlipper
                android:id="@+id/viewFlipper1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/relative_slide_in_left"
                android:outAnimation="@anim/relative_slide_out_right">

                <RelativeLayout
                    android:id="@+id/relativeLayoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_button_shape"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:elevation="6dp"
                        android:text="@string/living_room"
                        android:textColor="@color/little_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="213dp"
                        android:layout_height="141dp"
                        android:layout_marginLeft="150dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/livingroom1" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </ViewFlipper>

            <!-- ViewFlipper 2 -->
            <ViewFlipper
                android:id="@+id/viewFlipper2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/relative_slide_in_left"
                android:outAnimation="@anim/relative_slide_out_right">

                <RelativeLayout
                    android:id="@+id/relativeLayoutButton1"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_button_shape"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:elevation="6dp"
                        android:text="@string/room_number1"
                        android:textColor="@color/little_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="213dp"
                        android:layout_height="141dp"
                        android:layout_marginLeft="150dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/room1" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </ViewFlipper>

            <!-- ViewFlipper 3 -->
            <ViewFlipper
                android:id="@+id/viewFlipper3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/relative_slide_in_left"
                android:outAnimation="@anim/relative_slide_out_right">

                <RelativeLayout
                    android:id="@+id/relativeLayoutButton2"
                    android:layout_width="match_parent"
                    android:layout_height="165dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/image_button_shape"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:elevation="6dp"
                        android:text="@string/room_number2"
                        android:textColor="@color/little_black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="213dp"
                        android:layout_height="141dp"
                        android:layout_marginLeft="150dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/room2" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </ViewFlipper>

        </LinearLayout>

    </ScrollView>


    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:elevation="8dp"
        app:itemIconSize="24dp"
        android:layout_marginBottom="1dp"
        app:itemIconTint="@drawable/item_selector"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu" />

</RelativeLayout>
